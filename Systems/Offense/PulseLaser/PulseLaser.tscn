class_name PulseLaser

var bullet = preload(\"res://Systems/Offense/PulseLaser/PulseLaserBullet.tscn\")

func _start_shooting():
	._start_shooting()
	$WeaponShootSound.play()
	
func _stop_shooting():
	._stop_shooting()
	$WeaponShootSound.stop()

func _shoot()->void:
	var bullet_instance: Area2D = bullet.instance()
	bullet_instance.position = to_global($WeaponShootPoint.position)
	bullet_instance.rotation_degrees = global_rotation_degrees
	bullet_instance.weapon = self;
	$Bullets.add_child(bullet_instance)
