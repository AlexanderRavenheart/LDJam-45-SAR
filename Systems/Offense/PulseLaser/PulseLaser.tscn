[sub_resource type="GDScript" id=1]
script/source = "extends Node2D

export (int) var damage: int = 20
export (float) var cooldown: float = 2

var bullet = load(\"res://Systems/Offense/PulseLaser/PulseLaserBullet.tscn\")

var can_shoot: bool = true

# Called when the node enters the scene tree for the first time.
func _ready():
	$TimerCooldown.set_wait_time(cooldown)

func _process(delta):
	if can_shoot:
		shoot()

func shoot()->void:
	var bullet_instance: Area2D = bullet.instance()
	bullet_instance.set_name(\"bullet\")
	bullet_instance.position = to_global($Position2D.position)
	bullet_instance.rotation_degrees = global_rotation_degrees
	bullet_instance.weapon = self;
	$Bullets.add_child(bullet_instance)
	can_shoot = false
	$TimerCooldown.start()
	

func _on_TimerCooldown_timeout():
	can_shoot = true;
"

