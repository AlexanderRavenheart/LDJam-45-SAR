export (float) var life = 0.3
export (int) var move_speed = 700

var move_direction = Vector2(0, -1)

func _ready()->void:
	$Timer.set_wait_time(life)
	move_direction = Vector2(0, -1).rotated(rotation)
	var speed_scale = 1 - ((randi() % 30) - 15) / 100.0
	move_speed = move_speed * 1.0 * max(speed_scale, 0.8)
	

func _physics_process(delta):
	# apply motion
	move_direction = Vector2(0, -1).rotated(rotation)
	move_speed = move_speed + (0 - move_speed) * 0.03
	position += move_direction * move_speed * delta
	

func _on_Timer_timeout()->void:
	self.queue_free()

func _on_FlakCannonBullet_body_entered(body):
	if self.get_parent() and self.get_parent().get_parent():
		if body != self.get_parent().get_parent():
			print(\"Do DAMAGE\")
			queue_free()
"

