script/source = "extends Node2D

onready var asteroid_res = load(\"res://Objects/Asteroid.tscn\")
onready var enemy_res = load(\"res://Objects/BaseEnemy.tscn\")

export (int) var level: int = 1
export (int) var max_enemies: int = 3
export (int) var max_asteroids: int = 3
export (int) var scrap_amount: int = 25
export (int) var spawn_cooldown: float = 3
export (int, 1, 6, 1) var min_enemy_difficulty := 1
export (int, 0, 6, 1) var max_enemy_difficulty := 2

var number_of_asteroids := 0
var number_of_enemies := 0

onready var level_size = get_viewport_rect().size

func _ready()->void:
	$SpawnTimerAsteroid.one_shot = false
	$SpawnTimerAsteroid.autostart = true
	$SpawnTimerAsteroid.wait_time = spawn_cooldown
	$SpawnTimerEnemy.one_shot = false
	$SpawnTimerEnemy.autostart = true
	$SpawnTimerEnemy.wait_time = spawn_cooldown
	initial_spawn()

func initial_spawn()->void:
	for i in range(max_asteroids):
		print(\"Spawn asteroid \", i)
		spawn_asteroid()
	
	for i in range(max_enemies):
		print(\"Spawn enemy \", i)
		spawn_enemy()

func spawn_asteroid()->void:
	number_of_asteroids += 1
	print(\"Spawn asteroid \")
	var asteroid = asteroid_res.instance() as RigidBody2D
	var x: float
	if (randi() % 10) < 5:
		x = -35
	else:
		x = level_size.x
	var y: float
	if (randi() % 10) < 5:
		y = -35
	else:
		y = level_size.y
	asteroid.position = Vector2(x, y)
	$Entities.add_child(asteroid)

func spawn_enemy(min_difficulty := 1, max_difficulty := 0)->void:
	number_of_enemies += 1
	print(\"Spawn enemy \")
	var enemy = enemy_res.instance() as KinematicBody2D
	if max_difficulty > 0:
		enemy.difficulty = rand_range(min_difficulty, max_difficulty+1)
	else:
		enemy.difficulty = min_difficulty
	var x: float
	if (randi() % 10) < 5:
		x = -70
	else:
		x = level_size.x
	var y: float
	if (randi() % 10) < 5:
		y = -70
	else:
		y = level_size.y
	enemy.position = Vector2(x, y)
	$Entities.add_child(enemy)

func _on_SpawnTimerEnemy_timeout():
	if number_of_enemies < max_enemies:
		spawn_enemy(min_enemy_difficulty, max_enemy_difficulty)

func _on_SpawnTimerAsteroid_timeout():
	if number_of_asteroids < max_asteroids:
		spawn_asteroid()
"

